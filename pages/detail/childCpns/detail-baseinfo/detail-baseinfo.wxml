<!--pages/detail/childCpns/detail-baseinfo/detail-baseinfo.wxml-->
<view class="content">
  <view class="title">
    <text>{{baseInfo.title}}</text>
  </view>
  <view class="price">
    <text class="new-price">{{baseInfo.newPrice}}</text>
    <text class="old-price">{{baseInfo.oldPrice}}</text>
    <text class="discount">{{baseInfo.discount}}</text>
  </view>
  <view class="columns">
    <text>{{baseInfo.columns[0]}}</text>
    <text>{{baseInfo.columns[1]}}</text>
    <text>{{baseInfo.services[baseInfo.services.length-1].name}}</text>
  </view>
  <view class="services">
    <block class="left">
      <image src="{{baseInfo.services[0].icon}}" class="icon"></image>
      <text class="services-desc">{{baseInfo.services[0].name}}</text>
    </block>
    <block>
      <image src="{{baseInfo.services[1].icon}}" class="icon"></image>
      <text class="services-desc">{{baseInfo.services[1].name}}</text>
    </block>
    <block>
      <image src="{{baseInfo.services[2].icon}}" class="icon"></image>
      <text class="services-desc">{{baseInfo.services[2].name}}</text>
    </block>
      
  </view>
</view>
