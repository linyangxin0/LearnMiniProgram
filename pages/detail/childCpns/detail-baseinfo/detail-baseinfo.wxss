.content{
  padding: 0 16rpx;
  margin-top: 30rpx;

  border-bottom: 10rpx solid #f2f5f8;
}

.title{
  color: #222;
  font-size: 32rpx;
}

.price{
  margin-top: 20rpx;
}

.new-price{
  color: #ff5777;
  font-size: 48rpx;
  margin-right: 10rpx;
}

.old-price{
  color: #999;
  text-decoration: line-through;
  font-size: 26rpx;
  margin-right: 10rpx;

}

.discount{
  color: white;
  background-color: #ff5777;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
}

.columns{
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(100,100,100,.1);

  margin-top: 30rpx;
  color: #999;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.services{
  display: flex;
  justify-content: space-between;

  height: 120rpx;
  line-height: 120rpx;

}

.icon{
  width: 28rpx;
  height: 28rpx;

  position: relative;
  top: 46rpx;
  left: 46rpx;
}

.services-desc{
  font-size: 26rpx;
  color: #333;
}

