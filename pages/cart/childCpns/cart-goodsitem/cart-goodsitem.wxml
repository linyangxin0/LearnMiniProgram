  <view class='item-icon'>
    <w-check-icon bindtap='onCheckClick' isChecked="{{isSelected}}"/>
  </view>
  <view class='item-img'>
    <image src="{{goodsItem.imageURL}}" mode='aspectFill' class="image"/>
  </view>
  <view class='item-info'>
    <view class='title'>{{goodsItem.title}}</view>
    <view class='desc'>{{goodsItem.desc}}</view>
    <view class='price-count'>
      <view class='price'>Â¥{{goodsItem.price}}</view>
      <view class='count'>x{{goodsItem.count}}</view>
    </view>
  </view>
</view>